// Prisma schema for LinkForge
// Supports SQLite for local dev, can switch to PostgreSQL for production

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  username     String   @unique
  password     String
  displayName  String
  bio          String   @default("")
  avatar       String   @default("")
  theme        String   @default("minimal-dark")
  plan         String   @default("free") // free, starter, pro, business, enterprise

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  links        Link[]
  pageViews    PageView[]
}

model Link {
  id        String   @id @default(cuid())
  title     String
  url       String
  enabled   Boolean  @default(true)
  order     Int      @default(0)

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  clicks    Click[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PageView {
  id        String   @id @default(cuid())

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  country   String?
  device    String?  // mobile, desktop, tablet
  referrer  String?

  createdAt DateTime @default(now())
}

model Click {
  id        String   @id @default(cuid())

  linkId    String
  link      Link     @relation(fields: [linkId], references: [id], onDelete: Cascade)

  country   String?
  device    String?
  referrer  String?

  createdAt DateTime @default(now())
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime

  createdAt DateTime @default(now())
}
